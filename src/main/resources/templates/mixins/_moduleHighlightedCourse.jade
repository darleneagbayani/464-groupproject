mixin moduleHighlightedCourse(module)
  .module.module-highlighted-course
    .module-highlighted-course__wrapper(style='background-image: url(!{module.course.imageUrl});')
      .module-highlighted-course__overlay
      .module-highlighted-course__content
        if(module.course.categories)
          .module-highlighted-course__categories
            each category in module.course.categories
              a.module-highlighted-course__category(href='/courses/categories/!{category.slug}!{base.meta.queryString}') #{category.title}
        h2.module-highlighted-course__title
          a(href='/courses/!{module.course.slug}!{base.meta.queryString}')= module.course.title
        .module-highlighted-course__description-wrapper
          p !{module.course.shortDescription}
        .module-highlighted-course__link-wrapper
          a.module-highlighted-course__link(href='/courses/!{module.course.slug}!{base.meta.queryString}') #{base.labels.viewCourseLabel}
